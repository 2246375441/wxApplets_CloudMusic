.indexContent{
  width: 100%;
  height: 100%;
  background:#141615 ;
}

/* 轮播图 */
.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}

/* 五个导航图标 */
.navContent{
  display: flex;
  padding-bottom: 30rpx;
  border-bottom:1rpx solid #262626;
  /* background-color: red; */
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: #371d1c;
  font-size: 50rpx;
  color: #b82d2d;
  margin: 20rpx 0;
}
.navItem text:nth-child(2){
  font-size: 26rpx;
  color: #fcfcfc;
}


/* 推荐歌曲 */
.recommendContent{
  padding: 20rpx;
  color: #f6f6f6;
}

/* 推荐歌曲--内容区域 */
.recommendScroll{
  display: flex;
  height: 300rpx;
}
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /* 单行文本溢出隐藏 省略号代替 */
  /* display: block; */
  /* white-space: nowrap; */
  /* overflow: hidden; */
  /* text-overflow: ellipsis; */

  /* 多行文本溢出隐藏 省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /*设置对齐模式*/
  -webkit-line-clamp: 2;/*设置盒子行数*/
}


/* 排行榜 */
.topListSwiper{
  height: 400rpx;
}
.topList{
  padding: 0 20rpx 20rpx 20rpx;
}
.swiperItem{
  width: 96%;
}
/* 排行榜内容区域 */
.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
  color:#f6f6f6;
}
.musicItem{
  /* 当父元素设置为flex弹性布局 其子元素会自动称为块级block元素 */
  display: flex;
  color:#f6f6f6;
  margin-bottom: 20rpx;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  /* 溢出文本隐藏 */
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
