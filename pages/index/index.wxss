.indexContent{
  width: 100%;
  height: 100%;
  background:#141615 ;
}

/* 轮播图 */
.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}

/* 五个导航图标 */
.navContent{
  display: flex;
  padding-bottom: 30rpx;
  border-bottom:1rpx solid #262626;
  /* background-color: red; */
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: #371d1c;
  font-size: 50rpx;
  color: #b82d2d;
  margin: 20rpx 0;
}
.navItem text:nth-child(2){
  font-size: 26rpx;
  color: #fcfcfc;
}


/* 推荐歌曲 */
.recommendContent{
  padding: 20rpx;
  color: #f6f6f6;
}
.recommendContent .header .title{
  font-size: 32rpx;
  line-height: 80rpx;
  color: #f6f6f6;
}
.recommendContent .header{
  padding-bottom: 20rpx;
}
.recommendContent .header .more{
  float: right;
  border: 1rpx solid #fcfcfc;
  color: #f6f6f6;
  font-size: 22rpx;
  border-radius: 30rpx;
  padding: 5rpx 15rpx;
}
/* 推荐歌曲--内容区域 */
.recommendScroll{
  display: flex;
}
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /* 单行文本溢出隐藏 省略号代替 */
  /* display: block; */
  /* white-space: nowrap; */
  /* overflow: hidden; */
  /* text-overflow: ellipsis; */

  /* 多行文本溢出隐藏 省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /*设置对齐模式*/
  -webkit-line-clamp: 2;/*设置盒子行数*/
}