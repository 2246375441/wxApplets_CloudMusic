<view class="indexContent">
  <!-- 轮播图 -->
  <swiper class="banners" indicator-dots="true" indicator-color="#2b2b2b" indicator-active-color="#f5f5f5">
    <swiper-item wx:for="{{bannerList}}" wx:key="bannerId">
      <image src="{{item.pic}}"></image>
    </swiper-item>
  </swiper>

  <!-- 五个图标导航区域 -->
  <view class="navContent">
    <view class="navItem">
      <text class="iconfont icon-meirituijian"></text>
      <text>每日推荐</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-gedan1"></text>
      <text>歌单</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-icon-ranking"></text>
      <text>排行榜</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-diantai"></text>
      <text>电台</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-zhiboguankanliangbofangsheyingshexiangjixianxing"></text>
      <text>直播</text>
    </view>
  </view>

  <!-- 推荐歌曲 -->
  <view class="recommendContent">
    <!-- 头部 -->
    <view class="header">
      <view>
        <text>为你精心推荐</text>
        <text class="more">查看更多</text>
      </view>
    </view>

    <!-- 主要内容区域 -->
    <scroll-view class="recommendScroll" enable-flex scroll-x>
      <!-- 推荐歌曲区域 -->
      <view class="scrollItem" wx:for="{{recommendList}}" wx:for-item="data" wx:key="id">
        <image src="{{data.picUrl}}"></image>
        <text>{{data.name}}</text>
      </view>
    </scroll-view>
  </view>
</view>