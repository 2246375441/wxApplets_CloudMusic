/* 整体背景色 */
.songDetailContainer{
  height: 100%;
  /* background: #141615; */
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 摇杆 */
.circle{
  position: relative;
  z-index: 999;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #fff;
  margin: 10rpx 0;
}
.needle{
  position: relative;
  z-index: 99;
  top: -40rpx;
  left: 60rpx;
  height: 274rpx;
  width: 192rpx;
  transform-origin: 40rpx 0;  /* 更改旋转中心点 */
  transform: rotate(-30deg);
  transition: all 1s ;
}
.needleRotate{
  transform: rotate(0deg);
}
/* 磁盘 */
.discContainer{
  position: relative;
  z-index: 9;
  top: -170rpx;
  width: 598rpx;
  height: 598rpx;
}
.discAnimation{
  animation: disc 5s linear infinite;
  animation-delay: 1s; /* 延迟动画开始 */
}
/* 
* @keyframes 设置动画帧
* 1  from to  设置简单动画  只有起始帧 和结束帧
* 2  百分比    设置复杂通话  动画可以设置多帧数
*/
@keyframes disc{
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
.discContainer .disc{
  width: 100%;
  height: 100%;
}
/* 磁盘中心图片 */
.musicImg{
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
}