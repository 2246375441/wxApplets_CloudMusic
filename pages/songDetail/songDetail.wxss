/* 整体背景色 */
.songDetailContainer{
  height: 100%;
  /* background: #141615; */
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 摇杆 */
.circle{
  position: relative;
  z-index: 999;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #fff;
  margin: 10rpx 0;
}
.needle{
  position: relative;
  z-index: 99;
  top: -40rpx;
  left: 60rpx;
  height: 274rpx;
  width: 192rpx;
  transform-origin: 40rpx 0;  /* 更改旋转中心点 */
  transform: rotate(-30deg);
  transition: all 1s ;
}
.needleRotate{
  transform: rotate(0deg);
}
/* 磁盘 */
.discContainer{
  position: relative;
  z-index: 9;
  top: -170rpx;
  width: 598rpx;
  height: 598rpx;
}
.discAnimation{
  animation: disc 12s linear infinite;
  animation-delay: 1s; /* 延迟动画开始 */
}
/* 
* @keyframes 设置动画帧
* 1  from to  设置简单动画  只有起始帧 和结束帧
* 2  百分比    设置复杂通话  动画可以设置多帧数
*/
@keyframes disc{
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
.discContainer .disc{
  width: 100%;
  height: 100%;
}
/* 磁盘中心图片 */
.musicImg{
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
}

/* 底部控制区域 */
.musicControl{
	position: absolute;
	bottom: 40rpx;
	left: 0;
	border-top: 1rpx solid #eee;
	width: 100%;
	display: flex;
}
.musicControl  text {
  width: 20%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
  font-size: 50rpx;
}

.musicControl  text.big{
  font-size: 80rpx;
}


/* 进度条控制区域 */
.progressControl{
	position: absolute;
	bottom: 200rpx;
	width: 640rpx;
	height: 80rpx;
	line-height: 80rpx;
	display: flex;
}
/* 总进度条 */
.braControl{
	position: relative;
	width: 450rpx;
	height: 6rpx;
	background: #7f7f7f;
	margin: auto;
	border-radius: 4rpx;
}
/* 实时进度条 */
.audio-currentTime-Bar{
	position: absolute;
	top: 0;
	left: 0;
	width: 100rpx;
	height: 4rpx;
	background: red;
	z-index: 1;
}
/* 小圆球 */
.audio-circle{
	position: absolute;
	right: -12rpx;
	top: -4rpx;
	width: 12rpx;
	height: 12rpx;
	border-radius: 50%;
	background: #fff;
}